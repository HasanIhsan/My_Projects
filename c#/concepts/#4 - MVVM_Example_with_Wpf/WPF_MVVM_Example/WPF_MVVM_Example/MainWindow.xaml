<Window x:Class="WPF_MVVM_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MVVM_Example"
        xmlns:views="clr-namespace:WPF_MVVM_Example.Screens"
        xmlns:viewmodels="clr-namespace:WPF_MVVM_Example.viewmodels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:UserControlAViewModel}">
            <views:UserControlA />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:UserControlBViewModel}">
            <views:UserControlB />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
